<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Group | GoNature</title>
  <link rel="stylesheet" href="/css/feed.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>

<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>

    <div class="container mt-4">
      <div class="row">
        <!-- Sidebar -->
        <aside class="sidebar col-lg-4">
          <div id="group-profile" class="mb-3">
            <!-- Filled by JS: group name, description, etc. -->
          </div>
          <div id="group-actions" class="mb-3">
            <!-- Filled by JS: Join/Leave or Edit/Manage -->
          </div>

          <!-- Filter Bar -->
          <div id="postFilters" class="card mb-4 p-3">
            <h6>Filter Posts</h6>
            <div class="mb-2">
              <label for="filterAuthor" class="form-label">Author</label>
              <select id="filterAuthor" class="form-select">
                <option value="">All</option>
                <!-- JS ימלא אופציות של שם משתמשים -->
              </select>
            </div>
            <div class="mb-2">
              <label class="form-label">Date Range</label>
              <input type="date" id="filterDateFrom" class="form-control mb-1" />
              <input type="date" id="filterDateTo" class="form-control" />
            </div>
            <div class="mb-2">
              <label for="filterType" class="form-label">Media Type</label>
              <select id="filterType" class="form-select">
                <option value="">All</option>
                <option value="image">Image</option>
                <option value="video">Video</option>
                <option value="none">None</option>
              </select>
            </div>
            <button id="applyFilters" class="btn btn-sm btn-primary w-100">Apply</button>
          </div>
          <div class="mt-4">
            <h6>Top Contributors</h6>
            <div id="groupActivityChart" class="d3-chart"></div>
          </div>
        </aside>

        <!-- Main Content: Posts -->
        <div class="col-md-8">
          <!-- Map container -->
          <div id="group-map" class="mb-4" style="height: 300px;"></div>

          <!-- Posts -->
          <div id="group-posts" class="row"></div>
          <!-- Filled by JS: posts belonging to this group -->
        </div>
      </div>
    </div>
    </div>
    <footer class="site-footer py-3 text-center">
      <p>© 2025 GoNature. All rights reserved.</p>
    </footer>

    <script>
      // passed in by your page-route
      window.groupId = "<%= groupId %>";
    </script>

    <!-- Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&libraries=places"></script>

    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <script type="module" src="/js/groupPage.js"></script>
</body>

</html>