<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile | GoNature</title>
    <link rel="stylesheet" href="/css/feed.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>

        <!-- User Page Content -->
        <div class="container mt-4">
            <div class="row">
                <!-- Sidebar -->
                <aside class="sidebar col-lg-4">
                    <div id="user-profile" class="text-start mb-3">
                        <div class="d-flex align-items-center">
                            <img id="user-profile-img" src="" class="rounded-circle me-3" width="70" height="70"
                                alt="Profile Image" />
                            <h4 id="user-username" class="mb-0"></h4>
                        </div>
                    </div>

                    <div id="user-actions" class="mb-3 d-flex gap-2"></div>

                    <!-- Show Following toggle -->
                    <button id="toggleFollowingBtn" class="btn btn-outline-secondary btn-sm mt-3" type="button"
                        data-bs-toggle="collapse" data-bs-target="#followingCollapse" aria-expanded="false"
                        aria-controls="followingCollapse">
                        Show Following
                    </button>


                    <!-- Following list (hidden by default) -->
                    <div class="collapse mt-2" id="followingCollapse">
                        <div id="followingList" class="d-flex flex-column gap-2 px-2">
                        </div>
                    </div>

                    <section id="chart-container">
                        <div class="mt-4">
                            <h6>Posts Per Month</h6>
                            <div id="userStatsChart" class="d3-chart"></div>
                        </div>
                    </section>
                </aside>

                <!-- Posts Section -->
                <div class="col-md-8">
                    <div id="user-posts" class="row"></div>
                </div>
            </div>
        </div>

        <!-- Edit User Modal -->
        <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <form id="editUserForm" class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editUserModalLabel">Edit Profile</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <div id="editUserAlert" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label for="editUsername" class="form-label">Username</label>
                            <input type="text" class="form-control" id="editUsername" name="username">
                        </div>

                        <div class="mb-3">
                            <label for="editEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="editEmail" name="email">
                        </div>

                        <div class="mb-3">
                            <label for="editPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="editPassword" name="password">
                        </div>

                        <div class="mb-3">
                            <label for="editProfileImage" class="form-label">Profile Image</label>
                            <input type="file" class="form-control" id="editProfileImage" name="profileImage">
                            <img id="profileImagePreview" src="" class="mt-2 rounded"
                                style="max-width: 150px; display: none;" alt="Preview">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Edit Post Modal -->
        <div class="modal fade" id="editPostModal" tabindex="-1" aria-labelledby="editPostModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <form id="editPostForm" class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editPostModalLabel">Edit Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="editPostAlert" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label for="editPostContent" class="form-label">Content</label>
                            <textarea class="form-control" id="editPostContent" name="content" rows="4"
                                required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- User context -->
        <script>
            const currentUserId = "<%= typeof user !== 'undefined' ? user._id : null %>";
            const viewedUserId = "<%= userId %>";
        </script>

        <!-- Scripts -->
        <script src="https://d3js.org/d3.v7.min.js"></script>
        <script type="module" src="/js/chartUtils.js"></script>
        <script type="module" src="/js/userPage.js"></script>
        <script src="/js/navbar.js" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</body>

</html>