<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile | GoNature</title>
    <link rel="stylesheet" href="/css/feed.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom px-4">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand fw-bold text-success fs-4" href="#">GoNature ðŸŒ¿</a>

            <div class="d-flex align-items-center position-relative">
                <!-- Dynamic Search bar (autocomplete) -->
                <div class="me-3 position-relative" style="min-width: 250px;">
                    <input class="form-control" type="search" placeholder="Search users or groups" id="searchQuery"
                        aria-label="Search" />
                    <ul id="navSearchResults" class="list-group position-absolute top-100 start-0 w-100 shadow-sm z-3"
                        style="max-height: 200px; overflow-y: auto;"></ul>
                </div>

                <!-- Profile + Logout -->
                <a id="profileLink" href="#">
                    <img id="userProfileImage" src="/images/profile-default.png" class="rounded-circle me-2 border"
                        width="40" height="40" alt="Profile" />
                </a>
                <span id="usernameDisplay" class="fw-semibold me-3"></span>
                <a href="/api/auth/logout" class="btn btn-outline-success btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <!-- User Page Content -->
    <div class="container mt-4">
        <!-- Match expected IDs -->
        <div id="user-profile" class="text-center mb-4">
            <img id="user-profile-img" src="" class="rounded-circle" width="100" height="100" alt="Profile Image" />
            <h2 id="user-username" class="mt-2"></h2>
        </div>

        <div id="user-actions" class="text-center mb-4"></div>

        <h4 class="text-center">User's Posts</h4>
        <div id="user-posts" class="mt-3 row"></div>
    </div>

    <!-- User context -->
    <script>
        const currentUserId = "<%= typeof user !== 'undefined' ? user._id : null %>";
        const viewedUserId = "<%= userId %>";
    </script>

    <!-- Scripts -->
    <script src="/js/userPage.js" defer></script>
    <script src="/js/navbar.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</body>

</html>